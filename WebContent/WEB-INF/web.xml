<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>MyWebStore</display-name>
  
<context-param>
        <param-name>JDBC_DRIVER</param-name>
        <param-value>org.mariadb.jdbc.Driver</param-value>
    </context-param>

    <context-param>
        <param-name>JDBC_URL</param-name>
        <param-value>jdbc:mariadb://localhost:3306/WebStore</param-value>
    </context-param>

    <context-param>
        <param-name>JDBC_LOGIN</param-name>
        <param-value>demo</param-value>
    </context-param>

    <context-param>
        <param-name>JDBC_PASSWORD</param-name>
        <param-value>mdp</param-value>
    </context-param>
    
    <jsp-config>
		<taglib>
			<taglib-uri>http://ldevapps.fr/tld/extratags</taglib-uri>
			<taglib-location>/WEB-INF/extratags.tld</taglib-location>
		</taglib>
	</jsp-config>

</web-app>